   div.container-fluid#header
      div.container
         div.button-list
            button.log-button#login(type="button") Log In
            button.log-button#signup(type="button") Sign Up
            button.log-button#logout(type="button") Log Out
            button.profile-button(type="button") Profile
            
        div.search-bar
           input.search-input#search-value(type="text", placeholder="Insert Location...")
           button.search-button(type="button", value="Search")
           
   div.container-fluid#search
      div.container
         div.search-results
        
   div.modals
      div.container-fluid#login
         div.container
            div.login-signup-box
               button.close-modal(type="button") X
               div.form
                  input.form-input(type="text", name="username", placeholder="username")
                  input.form-input(type="text", name="password", placeholder="password")
                  button.form-button(type="button", value="Log In")
      
      div.container-fluid#signup
         div.container
            div.login-signup-box
               button.close-modal(type="button") X
               div.form
                  input.form-input(type="text", name="username", placeholder="username")
                  input.form-input(type="text", name="email", placeholder="email")
                  input.form-input(type="text", name="password", placeholder="password")
                  input.form-input(type="text", name="passwordConfirm", placeholder="password again")
                  button.form-button(type="button", value="Sign Up")
                  
      div.container-fluid#profile
         div.container
            div.profile-box
               button.close-modal(type="button") X
               div.profile-results